{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "ES2022",
		"rootDir": ".",
		"baseUrl": ".",
		"resolveJsonModule": true,
        "esModuleInterop": true
	},
	"compileOnSave": true,
	"include": [
		"src",
	],
	"exclude": [
		"node_modules", 
		"dist",
		"*/**/*.d.ts",
	]
}